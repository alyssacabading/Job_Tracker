{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es6"],
    "module": "ESNext",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true ,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.js"], // Includes both JS and TS files from the source folder
  "exclude": ["node_modules", "build"]   
}